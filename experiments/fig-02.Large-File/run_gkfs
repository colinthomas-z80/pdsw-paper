#!/bin/bash

export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$SHARED_DIR/gekkofs/install/lib
export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$SHARED_DIR/gekkofs/install/lib64
export LIBGKFS_HOSTS_FILE=$SHARED_DIR/gekkohost

$SHARED_DIR/gekkofs/install/bin/gkfs_daemon -m /tmp/gekkomnt -r /tmp/gekkoroot$$ -H $SHARED_DIR/gekkohost --clean-rootdir &

$ENVIRONMENT/bin/vine_worker -d all -o debug.$$ --cores 12 $HOST_MACHINE 9123

pkill gkfs_daemon

